extends layout

block content
    audio.player(src='', preload='auto', volume='0')

    .global-alerts
        #global-success.global-alert.alert.alert-success
        #global-error.global-alert.alert.alert-danger

    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .container-fluid
            .navbar-header
                a.navbar-brand(href='/') Ricochet
            ul.nav.navbar-nav.navbar-right
                li.dropdown
                    a.dropdown-toggle(data-toggle='dropdown', href='#')
                        i.fa.fa-lg.fa-fw.fa-gear
                        i.fa.fa-lg.fa-fw.fa-caret-down
                    ul.dropdown-menu(role='menu')
                        li
                            a#reindex(href='#') Reindex


    nav.navbar.navbar-inverse.navbar-fixed-bottom(role='navigation')
        .container-fluid
            p.navbar-text.navbar-right.controls
                span.duration
                span.volumebar
                    span.volumehandle
                        i.fa.fa-circle
                i.volume.fa.fa-lg.fa-fw.fa-volume-off
                i.fa.fa-lg.fa-fw
                i.prev.fa.fa-lg.fa-fw.fa-backward
                i.fa.fa-lg.fa-fw
                i.play.fa.fa-lg.fa-fw.fa-play
                i.fa.fa-lg.fa-fw
                i.next.fa.fa-lg.fa-fw.fa-forward
            p.navbar-text.now-playing
                span.artist
                span.title
            .progress

    table.table.table-striped.table-hover.table-responsive.table-condensed.library
        thead
            th Title
            th Duration
            th Artist
            th Album
            th Track
            th Plays
            th &nbsp;
        tbody
            each track, index in library
                include row.jade

    include edit-modal.jade

    script(type='text/javascript', src='/js/stream.js')


